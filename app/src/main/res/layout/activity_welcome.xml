<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/welcome_activity_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/welcome_activity_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hesabım Var"
        android:textAllCaps="false"
        android:background="@drawable/button_bg"
        android:layout_above="@id/welcome_activity_btn_createAccount"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/welcome_activity_btn_createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hesap Oluştur"
        android:textAllCaps="false"
        android:background="#00000000"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" />

</RelativeLayout>